@model Project_64131375.Models.LoaiSua

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin_64131375.cshtml";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
$(function ()
                    {
                        var fileupload = $("#Avatar");
                        var image = $("#FileUpload");
                        image.click(function ()
                        {
                            fileupload.click();
                        });
                        fileupload.change(function ()
                        {
                            var fileName = $(this).val().split('\\')[$(this).val().split('\\').length - 1];
                            document.getElementById("AnhLoaiSua").value=fileName;
                        });
                    });</script>




<style>
    .btn-dep input[type="submit"] {
        background-color: #4CAF50; /* Màu xanh lá cây */
        color: white; /* Chữ màu trắng */
        padding: 10px 20px; /* Đệm bên trong */
        font-size: 16px; /* Cỡ chữ */
        border: none; /* Không có viền */
        border-radius: 5px; /* Góc bo tròn */
        cursor: pointer; /* Biểu tượng chuột khi rê vào */
        transition: all 0.3s; /* Hiệu ứng mượt */
    }

        .btn-dep input[type="submit"]:hover {
            background-color: #45a049; /* Màu xanh đậm hơn khi rê chuột */
        }

</style>



@using (Html.BeginForm("Edit", "LoaiSuas_64131375", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center">Chỉnh Sửa Các Loại Sữa </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLoaiSua)

        <div class="form-group">
            @Html.LabelFor(model => model.TenLoaiSua,"Tên loại sữa" ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoaiSua, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoaiSua, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhLoaiSua,"Ảnh loại sữa" ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnhLoaiSua, new { htmlAttributes = new { @class = "form-control" } })
                <input type="file" class="form-control" name="AnhLoaiSua" id="Avatar" accept="image/*">
                @Html.ValidationMessageFor(model => model.AnhLoaiSua, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align:center">
            <div class="col-md-offset-2 col-md-10 btn-dep">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="text-align:center; margin-right:200px">
    @Html.ActionLink("Quay Lại Trang Chủ Loại Sữa", "Index")
</div>



