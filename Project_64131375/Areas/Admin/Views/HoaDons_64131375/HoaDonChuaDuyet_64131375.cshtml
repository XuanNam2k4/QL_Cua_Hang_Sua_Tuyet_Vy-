@model IEnumerable<Project_64131375.Models.HoaDon>

@{
    ViewBag.Title = "HoaDonChuaDuyet_64131375";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin_64131375.cshtml";
    int i = 0;
}



<script type="text/javascript" src="~/Content/userAssets/js/paginate.js"></script>
<!-- Page Header -->
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Hóa đơn chưa duyệt</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","HoaDons_64131375")">Hóa đơn</a></li>
                <li class="breadcrumb-item active">Hóa đơn chưa duyệt</li>
            </ul>
        </div>
    </div>
</div>
