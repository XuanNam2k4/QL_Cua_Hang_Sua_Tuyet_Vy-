@model Project_64131375.Models.NhanVien

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin_64131375.cshtml";
}

<style>

    .senbai input[type="submit"] {
        padding: 10px 20px; /* Tăng kích thước nút */
        font-size: 16px; /* Cỡ chữ */
        color: #fff; /* Màu chữ trắng */
        background-color: #28a745; /* Màu xanh lá cây */
        border: none; /* Xóa viền */
        border-radius: 5px; /* Bo góc cho nút */
        cursor: pointer; /* Thêm con trỏ chuột dạng tay */
        transition: background-color 0.3s, transform 0.2s; /* Hiệu ứng chuyển màu và phóng to */
    }

        .senbai input[type="submit"]:hover {
            background-color: #218838; /* Màu xanh lá đậm hơn khi hover */
            transform: scale(1.05); /* Phóng to nhẹ khi hover */
        }

        .senbai input[type="submit"]:active {
            background-color: #1e7e34; /* Màu xanh lá tối hơn khi nhấn */
        }

</style>

