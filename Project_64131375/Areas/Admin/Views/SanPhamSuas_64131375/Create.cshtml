@model Project_64131375.Models.SanPhamSua

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin_64131375.cshtml";
}






@using (Html.BeginForm("Create", "SanPhamSuas_64131375", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header justify-content-center">
            <h4 class="modal-title"><b>THÊM SẢN PHẨM SỮA</b></h4>

        </div>
        <div class="modal-body">
            <div class="form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @*@Html.TextBox("MaNC", null, new { id = "MaNC", @readonly = "readonly" })*@
                            @Html.LabelFor(model => model.MaSua, "Mã sữa", htmlAttributes: new { @class = "control-label col-md-" })
                            @Html.EditorFor(model => model.MaSua, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaSua, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenSua, "Tên sữa", htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.TenSua, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control"@*, required="required"*@}
})
                            @Html.ValidationMessageFor(model => model.TenSua, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SoLuong, "Số lượng", htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.SoLuong, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control"@*, required = "required"*@}
})
                            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DonGia, "Đơn giá", htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.DonGia, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control"@*, required = "required"*@}
})
                            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.HanSuDung, "Hạn sử dụng", htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.HanSuDung, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HanSuDung, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiSua, "Mã Loại Sữa", htmlAttributes: new { @class = "" })
                            @*@Html.DropDownList("MaLoaiNC", null, htmlAttributes: new { @class = "form-control select" })*@
                            @Html.DropDownListFor(model => model.MaLoaiSua, ViewBag.MaLoaiNC as SelectList, new { @class = "form-control select", id = "MaLoaiNC" })
                            @Html.ValidationMessageFor(model => model.MaLoaiSua, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaNCC, "Nhà cung cấp", htmlAttributes: new { @class = "" })
                            @Html.DropDownList("MaNCC", null, htmlAttributes: new { @class = "form-control select" })
                            @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.AnhSua, htmlAttributes: new { @class = "" })
                            <input type="file" class="form-control" name="AnhSua" accept="image/*" required>
                            @Html.ValidationMessageFor(model => model.AnhSua, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaHSX, "Hãng sản xuất", htmlAttributes: new { @class = "" })
                            @Html.DropDownList("MaHSX", null, htmlAttributes: new { @class = "form-control select" })
                            @Html.ValidationMessageFor(model => model.MaHSX, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MoTa, "Mô tả", htmlAttributes: new { @class = "" })
                            @Html.TextArea("MoTa", "", 4, 10, new
                            {
                                @class = "form-control",
                                placeholder = "Enter text"@*,  required = "required"*@})
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary submit-btn m-r-10" })
                    <input type="submit" value="Thêm mới" class="btn btn-success submit-btn" />
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script>
        $(document).ready(function () {
            $("#MaLoaiSua").change(function () { // Gọi hàm khi giá trị trong dropdown list thay đổi
                var loaiSua = $(this).val(); // Lấy giá trị sản phẩm sữa đã chọn
                var url = "@Url.Action("GenerateMaSua", "SanPhamSuas")";

                $.ajax({
                    url: url,
                    type: "POST",
                    dataType: "json",
                    data: { LoaiSua: loaiSua },
                    success: function (data) {
                        $("#MaSua").val(data); // Gán giá trị mã sữa vào thẻ input có id là "MaSua"

                    }
                });
            });
        });
        </script>
    }
}