@model Project_64131375.Models.SanPhamSua

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser_64131375.cshtml";
}




<script>
    var modelId = '@Model.MaSua'; // Tạo biến JavaScript từ giá trị Razor
</script>
<!-- quantityall Javascript -->
<script src="~/Content/userAssets/js/quantity.js"></script>

<script type="text/javascript">
    $(function () {
        $("#addtocart").click(function () {
            var model = {};
            //lấy id sản phẩm
            model.Id = modelId ;
            // lấy số lượng đặt hàng
            model.Quantity = $("#ipQuantity").val();
            debugger;
            $.ajax({
                type: "POST",
                url: '@Url.Action("AddToCart", "Cart_64131375")',
                data:  JSON.stringify(model) ,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function () {
                    alert("Thêm giỏ hàng thành công!")
                    @*$('#CartCount').text(  @Session["count"] + 1);*@
                },
                error: function () {
                    alert("Lỗi trong khi thêm vào giỏ hàng!");
                }
            });
            return false;
        });
    });
</script>

@{
    var SPdeXuat = Session["SPdeXuat"] as List<Project_64131375.Models.SanPhamSua>;
    if (SPdeXuat != null)
    {
        // Sử dụng danh sách
        ViewBag.SPdeXuat = SPdeXuat.Where(x => x.LoaiSua.MaLoaiSua == Model.LoaiSua.MaLoaiSua).Take(4);
    }
}


<style>
    a {
        transition: 0.3s; /* Hiệu ứng chuyển đổi màu */
    }

        a:hover {
            transform: scale(1.2); /* Hiệu ứng phóng to khi di chuột */
        }
</style>
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="@Url.Action("Index_64131375", "Home_64131375")">Trang chủ</a>
                <a class="breadcrumb-item text-dark" href="#">Sản phẩm</a>
                <span class="breadcrumb-item active">Chi tiết</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
